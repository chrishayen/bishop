// ============================================
// Channel Send/Recv
// ============================================

// Test basic send and receive
async fn test_send_recv() {
    ch := Channel<int>();
    await ch.send(42);
    val := await ch.recv();
}

// ============================================
// Select Statement
// ============================================

// Test select with recv
async fn test_select_recv() {
    ch1 := Channel<int>();
    ch2 := Channel<int>();

    select {
        case val := ch1.recv() {
            x := val + 1;
        }
        case val := ch2.recv() {
            x := val + 2;
        }
    }
}

